@model IEnumerable<Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }
</style>
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">My Personal Blog</h1>
            <p class="lead text-muted">
                This is a list of you posts!
            </p>
            <p>
                <a asp-action="Create" class="btn btn-primary my-2">POST</a>
                @*<a href="#" class="btn btn-secondary my-2">Secondary action</a>*@
            </p>
        </div>
    </div>
</section>

<div class="album p -5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @if (item.Image == null)
                        {
                            <img src="~/img/bitcoin.jpg" height="225" />
                        }
                        else
                        {
                            <img src="data:image/jpeg;base64,@item.Image" height="225" />
                        }
                        <div class="card-body">
                            <p class="card-title">@Html.DisplayFor(modelItem => item.Title)</p>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"
                                            onclick="location.href='@Url.Action( "Details", new {  id = item.Id })'">
                                        View
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary"
                                            onclick="location.href='@Url.Action( "Edit", new {  id = item.Id })'">
                                        Edit
                                    </button>
                                    @*<button type="button" class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</button>*@
                                </div>
                                <small class="text-muted">@Html.DisplayFor(modelItem => item.DateCreated)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



