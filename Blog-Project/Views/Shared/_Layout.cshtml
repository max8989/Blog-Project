<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog_Project</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/lib/bootstrap-5.0.0-beta3-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Playfair&#43;Display:700,900&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/blog.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    @*<a class="link-secondary" href="#">Subscribe</a>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="link-secondary" asp-area="" asp-controller="Posts" asp-action="Index">My Posts</a>
                    }
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-dark" asp-area="" asp-controller="Home" asp-action="Index">My Blog</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    @*<a class="link-secondary" href="#" aria-label="Search">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5" /><path d="M21 21l-5.2-5.2" /></svg>
                        </a>*@
                    <partial name="_LoginPartial" />
                    @*<a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a>*@
                </div>
            </div>
        </header>


    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <br />
        <div class="row">
            <div class="col-md-12">
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2021 - My Blog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    

    @*<footer class="blog-footer">
        &copy; 2021 - Blog_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        <p>
            <a href="#">Back to top</a>
        </p>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/lib/bootstrap-5.0.0-beta3-dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
