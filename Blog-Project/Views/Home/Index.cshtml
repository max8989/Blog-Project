@model IEnumerable<Post>

@{
    ViewData["Title"] = "Home Page";
}

<div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
        @await Component.InvokeAsync("LayoutCategories") 
    </nav>
</div>

<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic">Welcome to my Blog!</h1>
        <p class="lead my-3">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
        <p class="lead mb-0"><a asp-area="" asp-controller="Posts" asp-action="Create" class="text-white fw-bold">Create a Post</a></p>
    </div>
</div>

<div class="row mb-2">

    @foreach (var post in Model)
    {
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">@post.Category.CategoryName</strong>
                    <h3 class="mb-0">@post.Title</h3>
                    <div class="mb-1 text-muted">@post.DateCreated</div>
                    <p class="card-text mb-auto">@post.Description</p>
                    <a class="stretched-link" asp-area="" asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id">Continue reading</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    @if (post.Image == null)
                    {
                        <img src="~/img/bitcoin.jpg" width="200" height="250" />
                    }
                    else
                    {
                        <img src="data:image/jpeg;base64,@post.Image" width="200" height="250" />
                    }
                </div>
            </div>
        </div>
    }


